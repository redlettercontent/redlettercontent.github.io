<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Red Letter Content{% if subtitle %} : {{ subtitle }}{% endif %}</title>

    <link rel="icon" href="images/favicon.png">

    <link rel="stylesheet" href="css/normalize.css" type="text/css">
    <link rel="stylesheet" href="css/main.css" type="text/css">
    <link rel="stylesheet" href="css/styles.css" type="text/css">
    <script src="js/vendor/modernizr-2.6.2.min.js"></script>
  </head>

  <body>
  <div id="intro-fullheight">
    <header id="main-header">
      <div class="set-width">
        <div>
          <a title="Red Letter Content" href="/" class="logo"><img src="img/logo.png" alt="Red Letter Content" width="125" height="161"></a>
        </div>
        <nav>
          <ul>
            <li><a href="index.html"{% if path == "index.html" %}class="active"{% endif %}>Home</a></li>
            <li><a href="aboutus.html"{% if path == "aboutus.html" %}class="active"{% endif %}>About Us</a></li>
            <li><a href="services.html"{% if path == "services.html" %}class="active"{% endif %}>Services</a></li>
            <li><a href="contact.html"{% if path == "contact.html" %}class="active"{% endif %}>Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <div class="resetfloat"></div>

    {% block content %}{% endblock content %}

    <div class="resetfloat"></div>

    <footer id="footer">
      <div class="set-width">
        <div class="left">&copy;2014 Red Letter Content. All Rights Reserved. Web Design by <a href="http://www.pathamm.com/portfolio" target="_blank">Pat Hamm</a>.</div>
        <div class="right">
          <a href="index.html"{% if path == "index.html" %}class="active"{% endif %}>Home</a>
          <a href="aboutus.html"{% if path == "aboutus.html" %}class="active"{% endif %}>About Us</a>
          <a href="services.html"{% if path == "services.html" %}class="active"{% endif %}>Services</a>
          <a href="contact.html"{% if path == "contact.html" %}class="active"{% endif %}>Contact</a>
        </div>
      </div>
    </footer>

    <div class="resetfloat"></div>
  </div>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <script src="js/plugins.js"></script>
  <script src="js/main.js"></script>

  <script>
    $(document).ready(function() {
      $(window).scroll(function() {
        if ($(this).scrollTop() > 100) {
          $('.left').fadeIn(200);
        } else {
          $('.left').fadeOut(200);
        }
      });
    });
  </script>

  <script>{% include "googleanalytics.js" %}</script>
  </body>
</html>
